<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.band.management.mapper.MemberMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.band.management.entity.Member">
        <id column="member_id" property="memberId" jdbcType="BIGINT"/>
        <result column="person_id" property="personId" jdbcType="BIGINT"/>
        <result column="band_id" property="bandId" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="gender" property="gender" jdbcType="CHAR"/>
        <result column="birth_date" property="birthDate" jdbcType="DATE"/>
        <result column="role" property="role" jdbcType="VARCHAR"/>
        <result column="join_date" property="joinDate" jdbcType="DATE"/>
        <result column="leave_date" property="leaveDate" jdbcType="DATE"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
        <result column="band_name" property="bandName" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        member_id, person_id, band_id, name, gender, birth_date, role, join_date, leave_date, created_at, updated_at
    </sql>

    <!-- 插入 -->
    <insert id="insert" parameterType="com.band.management.entity.Member" useGeneratedKeys="true" keyProperty="memberId">
        INSERT INTO Member (person_id, band_id, name, gender, birth_date, role, join_date, leave_date)
        VALUES (#{personId}, #{bandId}, #{name}, #{gender}, #{birthDate}, #{role}, #{joinDate}, #{leaveDate})
    </insert>

    <!-- 根据ID删除 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM Member WHERE member_id = #{memberId}
    </delete>

    <!-- 更新 -->
    <update id="update" parameterType="com.band.management.entity.Member">
        UPDATE Member
        <set>
            <if test="personId != null">person_id = #{personId},</if>
            <if test="bandId != null">band_id = #{bandId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="gender != null and gender != ''">gender = #{gender},</if>
            <if test="birthDate != null">birth_date = #{birthDate},</if>
            <if test="role != null and role != ''">role = #{role},</if>
            <if test="joinDate != null">join_date = #{joinDate},</if>
            <if test="leaveDate != null">leave_date = #{leaveDate},</if>
        </set>
        WHERE member_id = #{memberId}
    </update>

    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Member
        WHERE member_id = #{memberId}
    </select>

    <!-- 查询所有 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Member
        ORDER BY member_id DESC
    </select>

    <!-- 根据乐队ID查询 -->
    <select id="selectByBandId" parameterType="long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM Member
        WHERE band_id = #{bandId}
        ORDER BY join_date ASC
    </select>

    <!-- 条件查询 -->
    <select id="selectByCondition" parameterType="com.band.management.entity.Member" resultMap="BaseResultMap">
        SELECT 
            m.member_id, m.band_id, m.name, m.gender, m.birth_date, m.role, m.join_date, m.leave_date, 
            m.created_at, m.updated_at,
            b.name AS band_name
        FROM Member m
        LEFT JOIN Band b ON m.band_id = b.band_id
        <where>
            <if test="bandId != null">
                AND m.band_id = #{bandId}
            </if>
            <if test="name != null and name != ''">
                AND m.name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="gender != null and gender != ''">
                AND m.gender = #{gender}
            </if>
            <if test="role != null and role != ''">
                AND m.role LIKE CONCAT('%', #{role}, '%')
            </if>
        </where>
        ORDER BY m.member_id DESC
    </select>

    <!-- 统计数量 -->
    <select id="count" resultType="int">
        SELECT COUNT(*) FROM Member
    </select>

    <!-- 条件统计 -->
    <select id="countByCondition" parameterType="com.band.management.entity.Member" resultType="int">
        SELECT COUNT(*)
        FROM Member
        <where>
            <if test="bandId != null">
                AND band_id = #{bandId}
            </if>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="gender != null and gender != ''">
                AND gender = #{gender}
            </if>
            <if test="role != null and role != ''">
                AND role LIKE CONCAT('%', #{role}, '%')
            </if>
        </where>
    </select>

</mapper>
